{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    ".agent/rules/global.md",
    ".agent/rules/SUBAGENT_MANIFEST.md",
    ".agent/workflows/*.md",
    ".arc/PROJECT.md",
    ".arc/CONTRACTS.md",
    ".arc/STATE.md"
  ],
  "mcp": {
    "arc-bridge": {
      "type": "local",
      "command": ["python", "./.agent/mcp/arc_mcp_server.py"],
      "environment": {
        "GEMINI_MODEL": "flash"
      },
      "enabled": true
    }
  },
  "tools": {
    "bash": true,
    "edit": true,
    "webfetch": true
  }
}