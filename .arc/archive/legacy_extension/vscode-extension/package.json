{
    "name": "arc-protocol",
    "displayName": "ARC Protocol - Multi-Agent Framework",
    "description": "Enables true multi-agent development with file access for browser subagents",
    "version": "1.0.0",
    "publisher": "AshishOP",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "keywords": [
        "ai",
        "agent",
        "multi-agent",
        "antigravity",
        "claude",
        "gemini"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "arc.startBridge",
                "title": "ARC: Start Subagent Bridge"
            },
            {
                "command": "arc.stopBridge",
                "title": "ARC: Stop Subagent Bridge"
            },
            {
                "command": "arc.openDashboard",
                "title": "ARC: Open Dashboard"
            },
            {
                "command": "arc.showStatus",
                "title": "ARC: Show Status"
            }
        ],
        "configuration": {
            "title": "ARC Protocol",
            "properties": {
                "arc.bridgePort": {
                    "type": "number",
                    "default": 8765,
                    "description": "Port for the subagent bridge server"
                },
                "arc.autoStartBridge": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start bridge server on workspace open"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0",
        "@vscode/vsce": "^2.0.0"
    }
}